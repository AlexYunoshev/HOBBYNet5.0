@{
    ViewData["Title"] = "Add user photo";
}

<style>
    body {
        background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(/images/background/Cycling1.jpg);
    }

    .input {
        margin: 10px auto;
        display: block;
        width: 95%;
    }

    input[type="submit"] {
        border-radius: 30px;
        padding: 10px 30px;
        border: none;
        background: linear-gradient(to right, #ff105f, #ffaf06);
        cursor: pointer;
        display: block;
    }

    .canvas {
        padding: 10px;
        border: solid black 1px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 15px;
        transition: .5s;
        margin: 10px auto;
        width: 95%;
    }

</style>

<div class="content">
    <div class="canvas">
        <form method="post" asp-action="ChangeUserPhoto" enctype="multipart/form-data">
            <p class="input">
                You can upload one photo. Correct file types are <b>.jpg</b> or <b>.png</b>.
            </p>

            <p class="input">
                Other files will not be uploaded to the user profile.
            </p>

            <p class="input">
                If you want to <b>delete</b> your photo just <b>leave this field empty</b> and <b>click "Submit"</b>.
            </p>

            <input class="input" type="file" name="file" />

            <p class="input">
                Just <b>leave this page</b> if you <b>don't want to change the photo</b>.
            </p>

            <input class="input" type="submit" value="Submit" />
        </form>
    </div>
</div>

