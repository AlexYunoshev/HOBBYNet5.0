@model HOBBYNetMVC.Models.UserSettings.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}

<style>
    .canvas {
        padding: 20px;
        border: solid black 1px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 15px;
        transition: .5s;
        margin: 10px auto;
        text-align: center;
    }
</style>

<div class="content">
    <div class="canvas">
        <form asp-action="ChangePassword" asp-controller="UserSettings">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Old password</label>
                <input type="text" asp-for="OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">New password</label>
                <input type="text" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
