@model HOBBYNetMVC.Models.UserSettings.MessengerViewModel
@{
    ViewBag.Title = "Change WhatsApp";
}

<style>
    .canvas {
        padding: 20px;
        border: solid black 1px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 15px;
        transition: .5s;
        margin: 10px auto;
        text-align: center;
    }
</style>

<div class="content">
    <div class="canvas">
        <form asp-action="WhatsApp" asp-controller="UserSettings">
            <div asp-validation-summary="All"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label>WhatsApp phone number in the format "380504058135"</label>
                <input type="text" asp-for="@Model.MessengerUsername" />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
