<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOBBYNetMVC</title>
    <link rel="stylesheet" href="~/css/style.css" />
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />*@
    

</head>
<body>
    <header class="header">
        <div class="container">
            <nav class="four">
                <img src="~/images/site_icon.png" alt="HobbyNet" class="logo" />
                <ul class="topmenu">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li> <a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin panel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="UserSettings" asp-action="Index">User Settings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Users list</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Friends">Friends</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="FriendRequests">Friend requests</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExplorePosts" asp-action="Index">Explore posts</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExplorePosts" asp-action="RecommendedPosts">Recommended posts</a>
                        </li>
                        <li>
                            <a href="#">About<i class="fa fa-angle-down"></i></a>
                            <ul class="submenu">
                                <li><a href="">Item 1</a></li>
                                <li><a href="">Item 2</a></li>
                            </ul>
                        </li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Contact</a></li>
                        <!--<form method="post" asp-controller="Account" asp-action="Logout">
                <ul class="navbar-nav flex-grow-1">-->
                        @*<li> <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>*@
                        <!--<li> <input class="nav-link text-dark" type="submit" value="Logout" /></li>
                    </ul>

                </form>-->
                    }
                    else
                    {
                        <li> <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Вход</a></li>
                        <li> <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Регистрация</a></li>
                    }

                </ul>
            </nav>
        </div>
        


    </header>
    <div class="container">
        <main role="main" class="pb-3">
           
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
       
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
