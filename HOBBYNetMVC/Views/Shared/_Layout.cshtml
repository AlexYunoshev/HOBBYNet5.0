<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HOBBYNet</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/post.css" />

</head>
<body>
    <header class="header">
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <nav class="nav">
                    <div class="logo">
                        <img src="~/images/site_icon.png" alt="HobbyNet" class="logo" height="64" width="64" />
                        <div class="tagline">
                            <h2>HOBBYNet</h2>
                            <h3>To be active!</h3>
                        </div>
                    </div>

                    <ul class="menu">
                        <li>
                            <form class="search-area" asp-action="SearchUser" asp-controller="User" method="post">
                                <input type="text" name="searchText" placeholder="Find user" />
                                <button type="submit">
                                    <img class="search-img" src="~/images/search.png" />
                                </button>
                            </form>
                        </li>

                        <li>
                            <a asp-controller="User" asp-action="Profile">Profile</a>
                            <ul class="submenu">
                                <li><a asp-controller="User" asp-action="Profile">Home</a></li>
                                <li><a asp-controller="User" asp-action="AddPost">Add post</a></li>
                                <li><a asp-controller="User" asp-action="Friends">Friends</a></li>
                                <li><a asp-controller="Hobby" asp-action="Index">My hobbies</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-controller="ExplorePosts" asp-action="Index">Explore</a>
                            <ul class="submenu">
                                <li><a asp-controller="ExplorePosts" asp-action="Index">Posts</a></li>
                                <li><a asp-controller="ExplorePosts" asp-action="RecommendedPosts">Recommendations</a></li>
                            </ul>
                        </li>

                        <li>
                            <a asp-controller="Advert" asp-action="Index">Adverts</a>
                            <ul class="submenu">
                                <li><a asp-controller="Advert" asp-action="Index">All adverts</a></li>
                                <li><a asp-controller="Advert" asp-action="UserAdverts">Your adverts</a></li>
                                <li><a asp-controller="Advert" asp-action="AddAdvert">Add advert</a></li>
                            </ul>
                        </li>

                        <li>
                            <a href="#" @*asp-controller="UserSettings" asp-action="Index"*@>Settings</a>
                            <ul class="submenu">
                                <li><a asp-controller="UserSettings" asp-action="ChangePassword">Password</a></li>
                                <li><a asp-controller="UserSettings" asp-action="ChangePhoneNumber">Phone number</a></li>
                                <li><a asp-controller="UserSettings" asp-action="Telegram">Telegram</a></li>
                                <li><a asp-controller="UserSettings" asp-action="Viber">Viber</a></li>
                                <li><a asp-controller="UserSettings" asp-action="WhatsApp">WhatsApp</a></li>
                                <li><a asp-controller="UserSettings" asp-action="Location">Location</a></li>
                            </ul>
                        </li>

                        <li>
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                <button type="submit">
                                    <img class="logout-img" src="~/images/logout.png" />
                                </button>
                            </form>
                        </li>
                    </ul>
                </nav>
            }



        </div>

    </header>
    <main role="main">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    @*<footer>
        © 2021 HOBBYNet
    </footer>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
