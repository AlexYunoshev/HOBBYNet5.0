@model Domain.ViewModels.HobbyViewModel
@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(/images/background/Cycling1.jpg);
    }

    .input {
        padding: 5px;
        margin: 5px auto;
        display: block;
        width: 95%;
    }


    textarea {
        resize: none;
    }

    input[type="submit"] {
        border-radius: 30px;
        padding: 10px 30px;
        border: none;
        background: linear-gradient(to right, #ff105f, #ffaf06);
        cursor: pointer;
        display: block;
    }


    .hobbies-list::-webkit-scrollbar {
        display: none;
    }




    .hobbies-list {
        border-radius: 15px;
        max-height: 280px;
        overflow: auto;
        margin: 5px 0;
    }

    .canvas {
        padding: 10px;
        border: solid black 1px;
        background-color: rgba(255, 255, 255, 1);
        border-radius: 15px;
        transition: .5s;
        margin-bottom: 10px;
    }




        .canvas button[type="submit"] {
            padding: 0;
            padding-top: 3px;
            border: none;
            background: inherit;
            cursor: pointer;
        }

        .canvas input[type="submit"] {
            padding: 10px;
            border-radius: 30px;
            width: 85%;
            padding: 10px 30px;
            border: none;
            background: linear-gradient(to right, #ff105f, #ffaf06);
            cursor: pointer;
            margin: 20px auto;
            display: block;
        }

    .remove-img {
        margin-top: 3px;
    }
</style>

<div class="content">
    <div class="explore-post">
        <form asp-action="AddPost" method="post" enctype="multipart/form-data">
            <textarea class="input" rows="10" name="postText" placeholder="Post text"></textarea>
            <p class="input">
                You can upload one photo. Correct file types are <b>.jpg</b> or <b>.png</b>.
            </p>
            <p class="input">
                Other files will not be uploaded to the post.
            </p>

            <input class="input" type="file" name="file" />

            


            <div class="canvas">
                <h3>Hobbies to add to the post:</h3>
                <div class="hobbies-list">

                    <table border="0" cellpadding="5" cellspacing="2">

                        @for (int i = 0; i < Model.addHobbiesList.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Html.CheckBoxFor(m => m.addHobbiesList[i].IsSelected)
                                    @Model.addHobbiesList[i].Name
                                    @Html.HiddenFor(m => m.addHobbiesList[i].Id)
                                    @Html.HiddenFor(m => m.addHobbiesList[i].Name)
                                </td>
                            </tr>
                        }

                    </table>

                </div>

            </div>


            <input class="input" type="submit" value="Submit" />
        </form>
    </div>
</div>

