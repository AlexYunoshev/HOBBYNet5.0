@model IEnumerable<Domain.Models.User>
@{
    ViewData["Title"] = "Index";
}


<h1>Hi, @User.Identity.Name</h1>

<h3>All users list:</h3>

<table border="1" cellpadding="2" cellspacing="2">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th></th>
    </tr>
        @foreach (var user in Model)
        {
           <tr>
               <td>@user.Id</td>
               <td>@user.FirstName</td>
               <td>@user.LastName</td>
               <td>@user.Email</td>
               <td><a class="btn btn-sm btn-primary" asp-action="AddFriendRequest" asp-route-id="@user.Id">Добавить в друзья</a></td>
           </tr>
        }
</table>
