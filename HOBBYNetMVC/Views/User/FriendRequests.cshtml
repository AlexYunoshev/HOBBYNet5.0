@model List<List<Domain.Models.DTO.FriendsList>>
@{
    ViewData["Title"] = "Friends";
}

<h1>Hi, @User.Identity.Name</h1>

<br />
<br />

@if (Model[0].Count != 0)
{
    <h3>Friend requests list:</h3>
    <form asp-action="FriendRequests" method="post">

        <table border="2" cellpadding="2" cellspacing="2">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>

            @foreach (var user in Model.ToList()[0])
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <button type="submit" class="btn btn-sm btn-danger" name="userId" value="@user.Id">Принять</button>
                    </td>

                </tr>
            }
        </table>
    </form>
}
else
{
    <h3>Friend requests list is empty</h3>
}

<br />
<br />

@if (Model[1].Count != 0)
{
    <h3>The user is waiting to be added as a friend to:</h3>
    <table border="2" cellpadding="2" cellspacing="2">
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>

        @foreach (var user in Model.ToList()[1])
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
            </tr>
        }
    </table>
}
else
{
    <h3>The user does not waiting to be added as a friend to</h3>
}




