@page
@*@model LoginModel*@
@model LoginRegisterModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.loginModel.Input.Email"></label>
                    <input asp-for="@Model.loginModel.Input.Email" class="form-control" />
                    <span asp-validation-for="@Model.loginModel.Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.loginModel.Input.Password"></label>
                    <input asp-for="@Model.loginModel.Input.Password" class="form-control" />
                    <span asp-validation-for="@Model.loginModel.Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="@Model.loginModel.Input.RememberMe">
                            <input asp-for="@Model.loginModel.Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.loginModel.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.loginModel.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h4>Use another service to log in.</h4>
            <hr />
            @{
                if ((@Model.loginModel.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.loginModel.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in @Model.loginModel.ExternalLogins)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}







<div class="hero">
    <div class="form-box" id="form-box">
        <div class="button-box">
            <div id="btn"></div>
            <button type="button" class="toggle-btn" onclick="login()">Log In</button>
            <button type="button" class="toggle-btn" onclick="register()">Register</button>
        </div>
        @*<form asp-controller="Identity" asp-action="Login" method="get">*@
        <form asp-area="Identity" asp-page="/Account/ExternalLogin" method="post">
            <div class="social-icons">
                @*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>*@
                <button type="submit" name="provider" value="Google">
                    <img src="~/images/gp.png" />
                </button>

            </div>
        </form>
        <form id="login" class="input-group" method="post">
            <input type="text" class="input-field" placeholder="Email" required asp-for="@Model.loginModel.Input.Email">
            <input type="password" class="input-field" id="login-password" placeholder="Password" required asp-for="@Model.loginModel.Input.Password">
            <div class="show-password">
                <input type="checkbox" class="check-box" onclick="ShowPassword()">
                <span>Show password</span>
            </div>
            <button type="submit" class="submit-btn">Login</button>
        </form>

        <form id="register" class="input-group" method="post"
              asp-controller="Account" asp-action="Register">
            <input type="text" class="input-field" placeholder="First name" required>
            <input type="text" class="input-field" placeholder="Last name" required>
            <input type="text" class="input-field" placeholder="Username" required>
            <input type="email" class="input-field" placeholder="Email" required>
            <input type="password" class="input-field" placeholder="Enter password" required>
            <input type="password" class="input-field" placeholder="Password confirm" required>
            <button type="submit" class="submit-btn">Register</button>
        </form>
    </div>
</div>

<script>
    var x = document.getElementById("login");
    var y = document.getElementById("register");
    var z = document.getElementById("btn");
    var p = document.getElementById("form-box");

    function login() {
        x.style.left = "50px";
        y.style.left = "450px";
        z.style.left = "0";
        p.style.height = "360px";
    }

    function register() {
        x.style.left = "-400px";
        y.style.left = "50px";
        z.style.left = "110px";
        p.style.height = "530px";
    }

    function ShowPassword() {
        var x = document.getElementById("login-password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }

</script>

